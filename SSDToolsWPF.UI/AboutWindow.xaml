<Window x:Class="SSDToolsWPF.UI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About SSD One-Stop Tool"
        Height="640" Width="740"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        Foreground="{StaticResource VS_TextBrush}"
        ResizeMode="NoResize"
        WindowStyle="None"
        ShowInTaskbar="False"
        AllowsTransparency="True">

  <Grid Margin="40">
    <Border BorderBrush="{StaticResource VS_BorderBrush}"
            BorderThickness="1"
            Background="{StaticResource VS_BackgroundDarkBrush}">
      <Border.Effect>
        <DropShadowEffect Color="White" 
                          BlurRadius="20" 
                          ShadowDepth="0" 
                          Opacity="0.2"/>
      </Border.Effect>
      <Grid Margin="25">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Watermark Logo Background -->
        <Image Grid.Row="0" Grid.RowSpan="3"
               Source="/Resource/3rdRockLogo256.png"
               Opacity="0.1"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center">
          <Image.Effect>
            <BlurEffect Radius="5"/>
          </Image.Effect>
        </Image>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,25" Background="Transparent" Orientation="Horizontal">
          <Image Source="/Resource/drive-image.png"
                 Width="82"
                 Height="82"
                 Margin="0,0,15,0"
                 VerticalAlignment="Center"
                 RenderOptions.BitmapScalingMode="HighQuality"/>
          <StackPanel>
            <TextBlock Text="SSD One-Stop Tool"
                       FontSize="32"
                       FontWeight="Light"
                       Foreground="{StaticResource VS_SuccessBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Version 1.0.0"
                       FontSize="14"
                       Foreground="{StaticResource VS_TextSecondaryBrush}"
                       HorizontalAlignment="Center"/>
          </StackPanel>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="Transparent">
          <StackPanel Background="Transparent">
            <TextBlock Text="WHAT THIS APPLICATION DOES"
                       FontSize="13"
                       FontWeight="Bold"
                       Foreground="{StaticResource VS_AccentBrush}"
                       Margin="0,0,0,12"/>

            <TextBlock TextWrapping="Wrap"
                       FontSize="13"
                       LineHeight="22"
                       Foreground="{StaticResource VS_TextSecondaryBrush}"
                       Margin="0,0,0,20">
              <Run FontWeight="SemiBold" Foreground="{StaticResource VS_TextBrush}">SSD One-Stop Tool</Run>
              <Run> is a Windows 11 utility that helps you maintain your solid-state drives (SSDs) for optimal performance and longevity.</Run>
            </TextBlock>

            <!-- Features Section -->
            <TextBlock Text="Fixes the &quot;Optimize Drives&quot; Feature"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource VS_TextBrush}"
                       Margin="0,0,0,6"/>
            <TextBlock TextWrapping="Wrap"
                       FontSize="12"
                       Foreground="{StaticResource VS_TextSecondaryBrush}"
                       LineHeight="20"
                       Margin="15,0,0,18">
              • Repairs the Windows service that handles drive optimization<LineBreak/>
              • Gets your scheduled maintenance back on track<LineBreak/>
              • Ensures the built-in drive optimizer works properly
            </TextBlock>

            <TextBlock Text="Runs TRIM Commands on Your SSDs"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource VS_TextBrush}"
                       Margin="0,0,0,6"/>
            <TextBlock TextWrapping="Wrap"
                       FontSize="12"
                       Foreground="{StaticResource VS_TextSecondaryBrush}"
                       LineHeight="20"
                       Margin="15,0,0,18">
              • TRIM tells your drive which data blocks are no longer needed<LineBreak/>
              • Without TRIM, SSDs can slow down over time<LineBreak/>
              • Run TRIM on individual drives or all drives at once<LineBreak/>
              • Check if TRIM is enabled on your system
            </TextBlock>

            <TextBlock Text="Sets Up Automatic Monthly Maintenance"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource VS_TextBrush}"
                       Margin="0,0,0,6"/>
            <TextBlock TextWrapping="Wrap"
                       FontSize="12"
                       Foreground="{StaticResource VS_TextSecondaryBrush}"
                       LineHeight="20"
                       Margin="15,0,0,18">
              • Creates scheduled tasks that automatically run TRIM every month<LineBreak/>
              • &quot;Set it and forget it&quot; - your SSDs stay healthy automatically<LineBreak/>
              • No need to remember manual maintenance
            </TextBlock>

            <TextBlock Text="Monitor What's Happening"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource VS_TextBrush}"
                       Margin="0,0,0,6"/>
            <TextBlock TextWrapping="Wrap"
                       FontSize="12"
                       Foreground="{StaticResource VS_TextSecondaryBrush}"
                       LineHeight="20"
                       Margin="15,0,0,18">
              • Real-time progress with spinner and percentage indicator<LineBreak/>
              • Detailed logs of all operations<LineBreak/>
              • Check status of drives and optimization service
            </TextBlock>

            <!-- Why Section -->
            <Separator Margin="0,10,0,15" Background="{StaticResource VS_BorderBrush}"/>

            <TextBlock Text="WHY USE THIS TOOL?"
                       FontSize="13"
                       FontWeight="Bold"
                       Foreground="{StaticResource VS_AccentBrush}"
                       Margin="0,0,0,12"/>

            <TextBlock TextWrapping="Wrap"
                       FontSize="13"
                       LineHeight="22"
                       Foreground="{StaticResource VS_TextSecondaryBrush}"
                       Margin="0,0,0,15">
              If you're running Windows 11 on an SSD (which most modern PCs do), this tool ensures your drive stays fast and healthy by keeping Windows' optimization features working correctly and running the essential TRIM maintenance that SSDs need.
            </TextBlock>

            <TextBlock TextWrapping="Wrap"
                       FontSize="12"
                       FontStyle="Italic"
                       Foreground="{StaticResource VS_TextDisabledBrush}"
                       LineHeight="20">
              Think of it as a specialized maintenance tool - like a tune-up utility specifically designed for SSDs, ensuring they keep running at peak performance!
            </TextBlock>
          </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Margin="0,25,0,10" Background="Transparent">
          <TextBlock Text="Developed for 3rdRock by Jim Barber (January 6, 2026)"
                     FontSize="11"
                     Foreground="{StaticResource VS_TextDisabledBrush}"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,4"/>
          <TextBlock Text="Built with .NET 10 and WPF"
                     FontSize="10"
                     Foreground="{StaticResource VS_TextDisabledBrush}"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,15"/>
          <Button Content="Close"
                  Width="120"
                  Height="36"
                  Style="{StaticResource AccentButton}"
                  HorizontalAlignment="Center"
                  Click="BtnClose_Click"/>
        </StackPanel>
      </Grid>
    </Border>
  </Grid>
</Window>














































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































